				<Label fx:id="labelMatrice" prefHeight="21.0"
					prefWidth="284.0" text="Liste des transformations" />
				<ListView fx:id="matriceA" prefHeight="235.0"
					prefWidth="284.0" />
				<HBox fx:id="hBoxBoutons" prefHeight="35.0" prefWidth="284.0">
					<children>
						<Button fx:id="boutonModifier" mnemonicParsing="false"
							onAction="#doModifier" prefHeight="50.0" prefWidth="137.0"
							text="Modifier" />
						<Button fx:id="boutonSupprimer" mnemonicParsing="false"
							onAction="#doSupprimer" prefHeight="50.0" prefWidth="126.0"
							text="Supprimer" />
						<VBox fx:id="vBoxBouton" prefHeight="50.0" prefWidth="30.0">
							<children>
								<Button fx:id="boutonHaut" mnemonicParsing="false"
									onAction="#doMonter" prefHeight="12.0" prefWidth="27.0"
									text="▲" />
								<Button fx:id="boutonBas" mnemonicParsing="false"
									onAction="#doDescendre" text="▼" />
							</children>
						</VBox>
					</children>
				</HBox>
			</children>
		</VBox>
	</right>
